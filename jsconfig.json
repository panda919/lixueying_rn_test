  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@containers/*": ["src/containers/*"],
      "@modules/*": ["src/modules/*"],
      "@screens/*": ["src/screens/*"],
      "@store/*": ["src/store/*"],
      "@utils/*": ["src/utils/*"],
      "@theme/*": ["src/theme/*"],    

      "@common/*": ["src/common/*"],

      "@components": ["src/components/index.js"],
      "@containers": ["src/containers/index.js"],
      "@theme": ["src/theme/index.js"],
    }
  }
}
